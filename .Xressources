xpdf*shadowThickness: 1
xpdf*initialZoom: width
xpdf*foreground: #2e3436
xpdf*background: #eeeeec
xpdf*toolTipEnable: true

!#
!# Xpdf.ad - application defaults for Xpdf
!#

Xpdf*schemeFileList:        SgiSpec
Xpdf*useSchemes:            all
Xpdf*useEnhancedFSB:        True
Xpdf*sgiMode:               true


!#
!# Force sanity for dialogs.
!#
!MGV*XmDialogShell.deleteResponse:      unmap

Xpdf*aboutDialog.textSW.text*fontList:  SGI_DYNAMIC PlainLabelFont
Xpdf*bldoptsDialog.textSW.text*fontList:        SGI_DYNAMIC PlainLabelFont

!##
!## Various appearance resources.  Sorry but the Motif defaults suck
!## undead guinea pigs through a fire hose.
!##

!#
!# Dialog space sanity.
!#
Xpdf*XmDialogShell.XmForm.horizontalSpacing: 10
Xpdf*XmDialogShell.XmForm.verticalSpacing:   10

!#
!# Button margins.
!#
Xpdf*XmPushButton.marginHeight:       4
Xpdf*XmPushButton.marginWidth:        4
Xpdf*XmPushButtonGadget.marginHeight: 4
Xpdf*XmPushButtonGadget.marginWidth:  4

!#
!# Margins for the menus.
!#
Xpdf*XmRowColumn*XmCascadeButton*XmToggleButton.marginWidth:             8
Xpdf*XmRowColumn*XmCascadeButton*XmToggleButtonGadget.marginWidth:       8
Xpdf*XmRowColumn*XmCascadeButtonGadget*XmToggleButton.marginWidth:       8
Xpdf*XmRowColumn*XmCascadeButtonGadget*XmToggleButtonGadget.marginWidth: 8

Xpdf*XmRowColumn*XmCascadeButton*XmPushButton.marginWidth:             8
Xpdf*XmRowColumn*XmCascadeButton*XmPushButtonGadget.marginWidth:       8
Xpdf*XmRowColumn*XmCascadeButtonGadget*XmPushButton.marginWidth:       8
Xpdf*XmRowColumn*XmCascadeButtonGadget*XmPushButtonGadget.marginWidth: 8

Xpdf*XmRowColumn*XmCascadeButton*XmCascadeButton.marginWidth:             8
Xpdf*XmRowColumn*XmCascadeButton*XmCascadeButtonGadget.marginWidth:       8
Xpdf*XmRowColumn*XmCascadeButtonGadget*XmCascadeButton.marginWidth:       8
Xpdf*XmRowColumn*XmCascadeButtonGadget*XmCascadeButtonGadget.marginWidth: 8

!#
!# Fonts that appear on menus.
!#
Xpdf*XmCascadeButton.fontList:       SGI_DYNAMIC ObliqueLabelFont
Xpdf*XmCascadeButtonGadget.fontList: SGI_DYNAMIC ObliqueLabelFont
Xpdf*XmMenuShell*fontList:           SGI_DYNAMIC ObliqueLabelFont

Xpdf*XmToggleButton*background: SGI_DYNAMIC ButtonBackground

Xpdf*XmToggleButton.fontList:SGI_DYNAMIC PlainLabelFont
Xpdf*XmToggleButtonGadget.fontList:SGI_DYNAMIC PlainLabelFont
Xpdf*XmLabel.fontList:SGI_DYNAMIC BoldLabelFont
Xpdf*XmLabelGadget.fontList:SGI_DYNAMIC BoldLabelFont
Xpdf*XmPushButton.fontList:SGI_DYNAMIC PlainLabelFont
Xpdf*XmPushButtonGadget.fontList:SGI_DYNAMIC PlainLabelFont
Xpdf*XmText.fontList:SGI_DYNAMIC FixedWidthFont
Xpdf*XmTextField.fontList:SGI_DYNAMIC FixedWidthFont
Xpdf*XmList.fontList:SGI_DYNAMIC PlainLabelFont
Xpdf*XmScale.fontList:SGI_DYNAMIC BoldLabelFont

Xpdf*XmSelectionBox*fontList:SGI_DYNAMIC PlainLabelFont
Xpdf*XmMessageBox*fontList: SGI_DYNAMIC PlainLabelFont
Xpdf*XmMessageBox*Message*fontList:SGI_DYNAMIC PlainLabelFont

Xpdf*visibleWhenOff: True
Xpdf*fillOnSelect: True

