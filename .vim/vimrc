" vimrc entry point
" vim: set foldmethod=marker foldlevel=0:
" -----------------
" Basic settings
source ~/.vim/vimrc-base

" Load vim-plug
if empty(glob('~/.vim/autoload/plug.vim'))
  silent !mkdir -p ~/.vim/autoload
  silent !curl -fLo ~/.vim/autoload/plug.vim
    \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
  autocmd VimEnter * PlugInstall
endif
call plug#begin('~/.vim/bundle')

" Universally useful
source ~/.vim/vimrc-essential
" Syntax highlighting / language-specific folding
source ~/.vim/vimrc-syntax
" General omnicomplete + snippets + tags + project management
source ~/.vim/vimrc-ide-misc

" Filetype-specific keybindings scheme:
" F1-F4 = Freely ft dependent
" F7 = Load into REPL/interactive
" F8 = Compile this single file and run executable / Run with interpreter

" filetype specific (plugins, bindings)
source ~/.vim/vimrc-ft-misc
source ~/.vim/vimrc-latex
source ~/.vim/vimrc-haskell

" Lots of colorschemes
source ~/.vim/vimrc-colors

" Finalize vim-plug
call plug#end()

colorscheme hybrid-light
" hi Normal ctermbg=NONE "only for dark themes

