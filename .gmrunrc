# Set terminal
Terminal = lxterminal
TermExec = ${Terminal} -e
AlwaysInTerm = ssh telnet ftp lynx mc vi vim pine centericq perldoc man ncmpcpp

# Set window geometry (except height)
Width = 400
Top = 400
Left = 600

# History size
History = 256

# Shows last history line selected when invoked
ShowLast = 1

# Show files starting with '.'
# Default is 0 (off), set it to 1 if you want "hidden" files to show up
# in the completion window
ShowDotFiles = 0

# Timeout (in milliseconds) after which gmrun will simulate a TAB press
# Set this to 0 if don't like this feature.
TabTimeout = 0

# URL handlers
# If the entered text is "http://www.google.com" then:
#   - %u gets replaced with the whole URL ("http://www.google.com")
#   - %s gets replaced with "//www.google.com".  This is useful for URL-s
#     like "man:printf" --> %s will get replaced with "printf"
URL_http = firefox -new-tab "%u"
URL_www = firefox -new-tab "%s"
URL_mailto = firefox -new-tab "mailto:%s"
URL_man = ${TermExec} 'man %s'
URL_info = ${TermExec} 'info %s'
URL_pd = ${TermExec} 'perldoc %s'
URL_file = nautilus %s
URL_readme = ${TermExec} 'less /usr/doc/%s/README'
URL_info = ${TermExec} 'info %s'
URL_sh = sh -c '%s'
URL_g = firefox 'http://www.google.com/search?q=%s'
URL_s = firefox 'https://startpage.com/do/search?q=%s'
URL_duckg = firefox 'https://duckduckgo.com/?q=%s'
URL_wikie = firefox 'http://en.wikipedia.org/w/index.php?title=Special%3ASearch&search=%s' 
URL_wikid = firefox 'http://de.wikipedia.org/w/index.php?title=Spezial%3ASuche&search=%s' 


# extension handlers
EXT:doc,rtf,odt = libreoffice %s
EXT:txt,cc,cpp,h,java,html,htm,epl,tex,latex,js,css,xml,xsl,am = gvim %s
EXT:ps,pdf,djvu = evince %s
EXT:jpg,png,bmp,gif = gpicview %s
